{
  "name": "ts-lazy",
  "version": "1.0.0",
  "description": "Elegant lazy computation utilities for TypeScript: remove branching in getters by using ValueProvider",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "files": ["dist"],
  "keywords": [
    "lazy",
    "typescript",
    "getter",
    "memoize",
    "no-branch"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ye-yu/ts-lazy.git"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@vitest/coverage-v8": "^2.1.9",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}
